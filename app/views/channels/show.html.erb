<h1><%= @channel.name %></h1>
<p><%= @channel.description%></p>

<div class="pull-right">
	<h5>Users</h5>
	<% @channel.users.each do |u| %>
	<h6><%= u.email %></h6>
	<%end%>
</div>

<% @channel.messages.each do |m| %>
<p><b><%= m.user.email %></b> : <%= m.text_message %> </p>
<%end%>

<%= form_for @message, :remote => true do |f| %>
	 <%= f.label :text_message %>
	 <%= f.text_area :text_message,:rows => "3" %><br />
	 <%= f.hidden_field :channel_id , :value => @channel.id %>
	 <%= f.hidden_field :user_id , :value => current_user.id %>
	 <%= f.submit %>
<% end %>

<script type="text/javascript">
$(document).bind("ajax:complete","#new_message", function(){
	
});
</script>
